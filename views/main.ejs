<div class="se-pre-con"></div>


<div class="row">
    <div class="col s6">
    <form action='/main/result' method='POST'>
        <div class="input-field" id="searchbaronmain">
            <input id="search" class="z-depth-3 white-text" type="search" name='search' placeholder='Search by Name or TickerID' required>
            <label class="label-icon " for="search"></label>
            <i class="material-icons magnifying white-text text-darken-2">search</i>
        </div>
    </div>
    <div class='col s6'>
        <button class="btn waves-effect waves-light z-depth-3" type="submit" name="action">Submit</button>
    </div>
    </form>  
    </div>





<div class='row'>
        <div class='col s12 m8 l8>
            <img class='currentUserImage' src='<%= currentUser.image %>' alt='broken link'>
            <h4><%= currentUser.firstname %></h4><span><a href='profile/edit/<%= currentUser.id %>'>Edit Profile</a></span>
            <p><span>Name: </span> <%= currentUser.firstname %></p>
            <p><span>Bio: </span> <%= currentUser.bio %></p>
            <p><span>Email: </span> <%= currentUser.email %></p>
        </div>
    
        <div class='col s12 m4 l4 profile'>
                <h4>Your Watchlist: </h4>
                <% favcoin.forEach(function(favcoin) { %>
                
                
                    <ul class="collection z-depth-5">
                            <li class="collection-item avatar cardcolor z-depth-5">
                              <img src='https://www.cryptocompare.com<%= favcoin.ImageUrl %>' alt="" class="circle">
                              <span class="title"><%= favcoin.CoinName %></span>
                              <p>First Line <br>
                                 Second Line
                              </p>
                              <form method="POST" action="/main/delete">
                                <input name="Symbol" type="hidden" value="<%= favcoin.Symbol %>">
                                <button class="secondary-content cardcolor" type="submit" ><i class="material-icons">check_circle</i></button>
                            </form>
                            </li>
                   </ul>
                
                <% }) %>
    </div>
        





