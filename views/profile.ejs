        <div class='faves'>
            <div class="col s12 m12 l12 center faveButtons">
                <a class="btn2 waves-effect waves-light btn-small" method="POST" href="coinlist/refresh"><i class="material-icons left btn2text">refresh</i>Refresh Currency Ticker Data</a>
            </div>
        </div>
    </div>
</div>
    

