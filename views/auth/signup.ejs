<h2>Sign Up</h2>

<div class="row">
		<div class="col s12">
			<form action='/auth/login' method='post'>
		<div class="row">
			<div class="col s6 input-field">
				<label>First Name</label>
				<input type="text" name="firstname" placeholder="Your First Name" value="<%= previousData ? previousData.firstname : '' %>">
			</div>
			<div class="col s6 input-field">
				<label>Last Name</label>
				<input type="text" name="lastname" placeholder="Your Last Name">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>Username</label>
				<input type="text" name="username" placeholder="Your Username">
			</div>
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>Email</label>
				<input type="email" name="email" placeholder="Your Email Address">
			</div>	
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>Password</label>
				<input type="password" name="password" placeholder="Your Password">
			</div>	
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>Retype Password</label>
				<input type="password" name="password_verify" placeholder="Your Password">
			</div>	
		</div>
		<div class="row">
			<div class="col s9 input-field">
				<label>Profile Image URL:</label>
				<input type="url" name="image" placeholder="Your pic or avatar">
			</div>	
			<div class="col s3 input-field">
				<label>Birthdate</label>
				<input type="text" name="dob" class="datepicker">
			</div>	
		</div>
		<div class="row">
			<div class="col s12 input-field">
				<label>Bio:</label>
				<textarea class="materialize-textarea" name="bio"></textarea>
			</div>
		</div>
			<button class="btn waves-effect waves-light" type="submit" name="action">Submit
				<i class="material-icons right">send</i>
			</button>
		</form>
	</div>
</div>

<div class="row">
		<form action="/auth/facebook">
			<button class="btn btn2 waves-effect waves-light" type="submit" name="action">Sign Up With Facebook
				<i class="material-icons left">people</i>
				<i class="material-icons right">send</i>
			</button>
		</form>
	</div>
	


